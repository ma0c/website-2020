
*
	font-family font-principal
	outline none !important

body 
	font-family font-principal

a
	color color-white
	text-decoration none
	&:hover
		text-decoration none
	

/*Bootstrap classes*/

.container-box 
	margin-left auto
	margin-right auto
	max-width 950px
	/*padding 0 15px*/


.row-no-padding
	[class*="col-"] 
		padding-left 0 !important
		padding-right 0 !important


.container-no-padding 
	padding-left 0 !important
	padding-right 0 !important


.row-centered 
	text-align center


.col-centered
	display inline-block
	float none
	/* inline-block space fix */
	margin-right -4px
	/* reset the text-align */
	text-align center
	vertical-align top









.container-fluid
	background  url('../images/field-bg.jpg') top center no-repeat
	background-size cover
	min-height 100vh
	overflow hidden
	position relative
	.logotype-container
		margin 120px auto 50px
		width 540px
		img
			display block
	
	.logo-container
		margin 0 auto 65px
		width 300px
		img
			display block
	.text-container
		color color-white
		margin 0 auto 200px
		position relative
		text-align center
		z-index 2
		p
			margin 0 0 10px
			font-weight light
		.h1
			font-size 29px
			letter-spacing 20px
		.h2
			font-size 21px
			letter-spacing 17px
		.h3
			font-size 19px
			letter-spacing 12px
	.clouds-left
		bottom -300px
		display block
		left -20%
		position absolute
		width 1000px
		z-index 1
		img
			display block
	.clouds-right
		bottom -110px
		display block
		position absolute
		right -35%
		width 1200px
		z-index 1
		img
			display block




@media screen and (max-width: 1400px)
	.container-fluid
		.clouds-left
			left -30%
		.clouds-right
			bottom -110px
			right -45%



@media screen and (max-width: 1250px)
	.container-fluid
		.clouds-left
			left -40%
		.clouds-right
			bottom -110px
			right -55%



@media screen and (max-width: 1100px)
	.container-fluid
		.clouds-left
			left -50%
		.clouds-right
			bottom -110px
			right -65%



@media screen and (max-width: 991px)
	.container-fluid
		.clouds-left
			display none
		.clouds-right
			display none



@media screen and (max-width: 767px)
	.container-fluid
		.logotype-container
			margin 80px auto 60px
			width 250px
			img
				display block
		
		.logo-container
			margin-bottom 50px
			width 180px
			img
				display block
		.text-container
			margin-bottom 60px
			p
				margin 0 0 10px
				font-weight light
			.h1
				font-size 22px
				letter-spacing 6px
			.h2
				font-size 18px
				letter-spacing 4px
			.h3
				font-size 16px
				letter-spacing 3px